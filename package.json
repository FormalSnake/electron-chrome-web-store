{
  "name": "electron-chrome-web-store",
  "version": "0.13.0",
  "description": "Install and update Chrome extensions from the Chrome Web Store for Electron",
  "main": "./dist/cjs/browser/index.js",
  "module": "./dist/esm/browser/index.mjs",
  "types": "./dist/types/browser/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/browser/index.d.ts",
      "import": "./dist/esm/browser/index.mjs",
      "require": "./dist/cjs/browser/index.js"
    },
    "./preload": "./dist/chrome-web-store.preload.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && node esbuild.config.js",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "NODE_ENV=production npm run build"
  },
  "keywords": [
    "electron",
    "chrome",
    "web",
    "store",
    "webstore",
    "extensions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FormalSnake/electron-chrome-web-store.git"
  },
  "author": "Samuel Maddock <sam@samuelmaddock.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^37.1.0",
    "esbuild": "^0.24.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/chrome": "^0.0.287",
    "adm-zip": "^0.5.16",
    "debug": "^4.3.7",
    "pbf": "^4.0.1"
  }
}
